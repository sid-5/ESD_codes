void LCD_init(){

LCD_command(0x38);//8bit mode and 5x7 matrix delay_ms(10);

LCD_command(0x0c);//off(display on/off)

delay_ms(10);

LCD command(0x0e);

delay_ms(10);

LCD_command(0x01)://clear LCD

delay_ms(10);

LCD_command(0x80)://set cursor to first line first position

delay ms(10);
void LCD_command(unsigned char command){

GPIOB->ODR = 0x00000000; //clear LCD data lines GPIOA->BSRR |= (1<<20); //RS = 0 for command

GPIOA->BSRR = (1<<21); // RW = 0 for write

GPIOB->BSRR = command<<16; //put command on data line GPIOA->BSRR |= (1<<6); // en =1

GPIOA->BSRR &= ~(1<<22);

delay_ms(10);

GPIOA->BSRR |(1<<22); // en-0

GPIOA->BSRR &= ~(1<<6); // en =1
}
void LCD data(unsigned char data) { GPIOB->ODR = 0x00000000; //clear LCD data lines 1

GPIOA->BSRR &= ~(1<<20); GPIOA->BSRR = (1<<4); // RS = 1

GPIOA->BSRR = (1<<21); // RW = 0 for write

GPIOB->BSRR = data<<16;//put command on data line

GPIOA->BSRR = (1<<6); // en =1

GPIOA->BSRR &= ~(1<<22);

delay_ms(10);

GPIOA->BSRR |= (1<<22); // en = 0

GPIOA->BSRR &= ~(1<<6); // en =1

}

void LCD write(unsigned char *string) {

int l=0;

while(string[l] != '\0') // searching the null terminator in the sentence
{
LCD_data(string[l]);
l++;
delay_ms(5);
}
} void right(unsigned char *string) {

int i=0;

while(string[i]!="\0"){

LCD_data(string[i]);

i++;
}

